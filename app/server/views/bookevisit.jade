extends homehead

block content
	include homebodyheader
	include homebodymiddle
		
	#footer-container
		#left-side.well-dn.span6
			#left-side-holder
				form( method="post")
					h3(align="left") Step 1: Enter patients for eVisit
					hr
					table.listcontainerheader(style = " width: 100%")
						tr.tableheader
							th.span4 Full Name
							th.span2 DOB
					table#listcontainer(style = " width: 100%; height: 200px; overflow-y: auto")
						tr.patient1
							td
								input#patient1name-tf(type="text", name="patient1name", id='patient1name-tf').span4.required
							td
								input#patient1dob-tf(type="text", name="patient1dob", id='patient1dob-tf').span2.required
						tr.patient2
							td
								input#patient2name-tf(type="text", name="patient2name", id='patient2name-tf').span4.required
							td
								input#patient2dob-tf(type="text", name="patient2dob", id='patient2dob-tf').span2.required
						tr.patient3
							td
								input#patient3name-tf(type="text", name="patient3name", id='patient3name-tf').span4.required
							td
								input#patient3dob-tf(type="text", name="patient3dob", id='patient3dob-tf').span2.required
						tr.patient4
							td
								input#patient4name-tf(type="text", name="patient4name", id='patient4name-tf').span4.required
							td
								input#patient4dob-tf(type="text", name="patient4dob", id='patient4dob-tf').span2.required
					
					hr	
					h3(align="left") Step 2: Who is the supervising nurse for this eVisit?
					input#nursename-tf(type="text", name="nursename", id='nursename-tf').span5.required		

		#right-side.well-dn.rightwell.span5
			#right-side-holder(style='text-align: center')
				h3(align="left") Step 3: Enter Date Range for Visit
				hr
				table.listcontainerheader(style = " width: 100%")
						tr.tableheader
							th.span2 Full Name
							th.span2 DOB
				input#rangestartdate-tf(type="text", name="rangestartdate", id='rangestartdate-tf').span2.required
				input#rangeenddate-tf(type="text", name="rangeenddate", id='rangeenddate-tf', style = 'float: right').span2.required

				hr
				h3(align="left") Step 4: Click Submit
				button(type="submit")#btn-evisit-submit.btn
					| Submit

					

	include modals/alert
	include modals/confirm


block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src="/vendor/jquery-1.10.2.js")
	script(src="/vendor/jquery-ui.js")
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/booking.js')
	script(src='/js/controllers/bookingController.js')