extends homehead

block content
	include homebodyheader
	include homebodymiddle

	#footer-container	
		#footer-holder(style = "text-align: center").well-dn.span12

			#left-side(style = "text-align: center").well-dn.span7
				#evisitlist
					h3(align="center") Appointment List
					hr
					table.listcontainerheader(style = " width: 100%")
						tr.tableheader
							th(style = " width: 90px") 
							th(style = " width: 90px") Date
							th(style = " width: 90px") Start
							th(style = " width: 90px") End
							th(style = " width: 90px") Doctor
							th(style = " width: 90px")
					#divlistcontainer(style = " width: 100%; height: 200px; overflow-y: scroll")
						table#listcontainer
						if (listevisits.length === 0)
							tr(style = "vertical-align: top")#noevisits
								th No eVisits.
						each evisititem, index in listevisits
							tr(style = "vertical-align: top").evisitrecord
								td.evisitrecordactiondelete(style = "width: 90px")
									input(type='submit', value='delete', evisitid=evisititem._id.toString())
								td.evisitrecorddate(style = "width: 90px")
									span.name(style=" display: block; text-align: center")=evisititem.appointmentdate
								td.evisitrecordstart(style = "width: 90px")
									span.name(style=" display: block; text-align: center")=evisititem.appointmentstarttime
								td.evisitrecordend(style = "width: 90px")
									span.name(style=" display: block; text-align: center")=evisititem.appointmentendtime
								td.evisitrecorddoctor(style = "width: 90px")
									span.name(style=" display: block; text-align: center")=evisititem.doctoruser
								td.evisitrecordactionfetch(style = "width: 90px")
									input(type='submit', value='fetch', evisitid=evisititem._id.toString())

			#right-side(style = "text-align: center; float: right").well-dn.span4
				#evisitpatientsublist
					h3(align="center") Patient List
					hr
					table.patientlistcontainerheader(style = " width: 100%")
						tr.tableheader
							th Name
							th DOB
					#divpatientlistcontainer(style = " width: 100%; height: 200px; overflow-y: scroll")
						table#patientlistcontainer





		include modals/alert
		include modals/confirm


block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/evisitreview.js')
	script(src='/js/controllers/eVisitReviewController.js')