extends homehead

block content
	include homebodyheader
	include homebodymiddle
		
	#footer-container
		#left-side-holder
			#left-side.well-dn.span4
				form( method="post")
					h3(align="left") Please Enter Availability
					hr
					label Date 
					input#date-tf(type="date", name="date", id='date-tf').span4.required
					label Start Time
					input#starttime-tf(type="time", name="starttime", id='starttime-tf').span4.required
					label End Time
					input#endtime-tf(type="time", name="endtime", id='endtime-tf').span4.required
					button(type="submit")#btn-availability-submit.btn
						| Submit

		#right-side-holder
				#availability-results-container(style = "text-align: center").well-dn.span8
					button(type="button")#btn-availability-view.btn
							| View Current Availability
					hr
					table.listcontainerheader(style = " width: 100%")
						tr.tableheader
							th.span2 Date
							th.span2 Start Time
							th.span2 End Time
							th.span2
					#div-availability-results(style = " width: 100%; height: 200px; overflow-y: scroll")
						table#availability-results
						
					

	include modals/alert
	include modals/confirm


block scripts
	script(src='/vendor/jquery.min.js')
	script(src='/vendor/jquery.form.js')
	script(src='/vendor/bootstrap-modal.js')
	script(src='/vendor/bootstrap-transition.js')
	script(src='/js/views/availability.js')
	script(src='/js/controllers/availabilityController.js')